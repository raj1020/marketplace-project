

<% if user_signed_in? %>
    <h1> This page allows the cooks to post details about the foods that they are going to cook.  </h1>
    
    <%= form_with(model: @cook, url: new_cook_path, local: true) do |form| %>
    <div>
        <%= form.label :street_address %>
        <%= form.text_field :street_address %>
    </div>
    <div>
        <%= form.label :suburb %>
        <%= form.text_field :suburb %>
    </div>
    <div>
        <%= form.label :postcode %>
        <%= form.text_field :postcode %>
    </div>
    <div>
        <%= form.label :state %>
        <%= form.text_field :state %>
    </div>
    <div>
        <%= form.label :user_id %>
        <%= form.number_field :user_id, min: 0 %>
    </div>
    <div>
        <%= form.label :category %>
        <%= form.text_field :category %>
    </div>
    <div>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0 %>
    </div>
    <div>
        <%= form.label :cooking_time %>
        <%= form.number_field :cooking_time, min: 0 %>
    </div>
    <div>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>





    <%= link_to "logout", destroy_user_session_path, method: :delete %>
<% else %>
    
   <div> Please <%= link_to "login", new_user_session_path %> to continue</div>
<% end %>
